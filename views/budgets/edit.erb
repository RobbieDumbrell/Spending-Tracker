<h1>Edit Budget</h1>

<div class="transaction">

  <h4>Current Budget:</h4>
  <ul>
    <li>Year: <%= @specified_budget.year %></li>
    <li>Month: <%= @specified_budget.month_name %></li>
    <li>Budget: <%= Formatter.pound_format(@specified_budget.budget) %></li>
  </ul>

</div>

<form class="" action="/budgets/<%= @specified_budget.id %>" method="post">

  <label for="budget">New Budget:</label>

  <br>

  <input id="budget" type="number" name="budget" step="0.01">

  <br>

  <input type="submit" value="UPDATE BUDGET">

</form>
