<h1>Transactions By Month</h1>

<% for transaction in @month_transactions %>
  <ul>
    <li><%= Merchant.find(transaction.merchant_id).name %></li>
    <li><%= Category.find(transaction.category_id).type %></li>
    <li><%= transaction.amount_spent %></li>
    <li><%= transaction.entry_date%></li>
    <li><a href="/transactions/<%= transaction.id %>">View</a></li>
  </ul>
<% end %>

<h4>Total Month Spend:</h4>
<p><%= @month_total_spend %></p>

